# Database Configuration
DATABASE_URL=sqlite:///./studentlearn.db
# For PostgreSQL: postgresql://user:password@localhost/studentlearn

# JWT Configuration
SECRET_KEY=your-super-secret-jwt-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Redis Configuration (for caching and background tasks)
REDIS_URL=redis://localhost:6379

# Environment
ENVIRONMENT=development
DEBUG=true

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# Admin Configuration
ADMIN_EMAIL=admin@studentlearn.com
ADMIN_PASSWORD=admin123

# Security Configuration
PASSWORD_MIN_LENGTH=6
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=15

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/studentlearn.log

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups 